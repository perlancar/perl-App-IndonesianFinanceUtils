#!perl

use 5.010;
use strict;
use warnings;

use Perinci::CmdLine::Any;

our %SPEC;

$SPEC{list_currency_exchange_rates_from_klikbca} = {
    v => 1.1,
    summary => 'List currency exchange rates from KlikBCA',
};
sub list_currency_exchange_rates_from_klikbca {
    require Finance::Currency::Convert::KlikBCA;

    my %args = @_;

    my $res = Finance::Currency::Convert::KlikBCA::get_currencies();
    return $res unless $res->[0] == 200;

    my @rows;
    my $currencies = $res->[2]{currencies};
    for my $cur (sort keys %$currencies) {
        my $row = $currencies->{$cur};
        $row->{currency} = $cur;
        push @rows, $row;
    }

    [200, "OK", \@rows, {
        'table.fields' => [qw/currency sell_er buy_er sell_ttc buy_ttc sell_bn buy_bn/],
    }];
}

Perinci::CmdLine::Any->new(
    url => '/main/list_currency_exchange_rates_from_klikbca',
)->run;

